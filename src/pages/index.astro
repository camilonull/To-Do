---
import Layout from "../layouts/Layout.astro";
import ButtonC from "../components/ButtonC.astro";
---

<Layout title="Inicio de sesion">
  <div class="flex items-center w-[30rem] lg:w-[50rem] mx-auto mt-[7rem] rounded-2xl overflow-hidden shadow-2xl shadow-black/50 ">
    <div class="flex flex-col lg:flex-row  bg-[#CCF993]">
      <div class="flex flex-col justify-around mx-10 lg:mx-20">
        <input class="px-4 py-2 m-2 border border-gray-300 rounded-2xl focus:outline-none focus:border-blue-500" type="text" placeholder="Usuario" />
        <input class="px-4 py-2 m-2 border border-gray-300 rounded-2xl focus:outline-none focus:border-blue-500" type="password" placeholder="Contraseña"/>
		<ButtonC class="bg-[#577B59] hover:bg-green-500">Iniciar Sesion</ButtonC>
        <ButtonC class="text-black hover:text-white">Recuperar Contraseña</ButtonC>
      </div>
      <div>
        <img class="rounded-2xl border-solid border-black border-[1px]" src="/img/fondologin.jpeg" alt="" />
      </div>
    </div>
  </div>
</Layout>
